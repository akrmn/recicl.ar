<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/text_primary_black</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>


    <style name="MaterialButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_white</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="ButtonGlass" parent="MaterialButton">
        <item name="android:backgroundTint">@color/button_glass</item>
    </style>

    <style name="ButtonPlastic" parent="MaterialButton">
        <item name="android:backgroundTint">@color/button_plastic</item>
    </style>

    <style name="ButtonCardboard" parent="MaterialButton">
        <item name="android:backgroundTint">@color/button_cardboard</item>
    </style>

    <style name="ButtonOrganicWaste" parent="MaterialButton">
        <item name="android:backgroundTint">@color/button_organic_waste</item>
    </style>
</resources>

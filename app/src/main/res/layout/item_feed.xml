<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view"
        android:layout_margin="8dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/people_obama" />

    <TextView
        android:id="@+id/text_view"
        android:lines="3"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Taylor Swift ha entregado 18kg de periÃ³dico en el Centro de Reciclaje en Recoleta"
        android:textColor="@color/text_primary_black"/>

    <ImageView
        android:id="@+id/check_star"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:src="@drawable/ic_star_border_black_18dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.HelperSuccess"
    tools:showIn="@layout/activity_helper_success"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="4">

    <TextView
        android:id="@+id/label_helper_success"
        android:padding="2dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/label_helper_success"
        android:textColor="@color/text_primary_black"
        android:textStyle="italic"
        android:textSize="24sp"
        android:gravity="center_horizontal|bottom"/>

    <TextView
        android:id="@+id/label_helper_result"
        android:padding="2dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:text="@string/label_plastic"
        tools:textColor="@color/button_plastic"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center_horizontal|top"/>

    <RelativeLayout
        android:id="@+id/button_find_centers"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:drawable/btn_default"
        android:foreground="?android:attr/selectableItemBackground"
        tools:backgroundTint="@color/button_plastic"
        android:clickable="true"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_outline_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp" />
        <TextView
            android:id="@+id/button_find_centers_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/button_helper_find_centers"
            android:textColor="@color/text_primary_white"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>

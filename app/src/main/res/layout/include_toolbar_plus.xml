<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:layout_collapseMode="pin" >

        <ProgressBar
            android:id="@+id/progress_spinner"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:indeterminate="true"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_plus_background"
        android:padding="8dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_picture_view"
            android:layout_margin="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/people_maite" />

        <TextView
            android:id="@+id/user_name_view"
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maite Delgado"
            android:textColor="@color/text_primary_white"/>

        <TextView
            android:id="@+id/user_points_view"
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="457 recipuntos"
            android:textStyle="italic"
            android:textColor="@color/accent" />

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>
